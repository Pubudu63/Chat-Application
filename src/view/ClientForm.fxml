      <TextField fx:id="txtMessageField" layoutX="19.0" layoutY="507.0" onAction="#txtMessageFieldOnAction" prefHeight="32.0" prefWidth="253.0" promptText="Write messages here...." styleClass="msgBox" stylesheets="@../css/style.css">
